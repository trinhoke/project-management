include ../mixins/sub-menu.pug

header.header 
    .container
        .row.align-items-center
            .col-md-2
                .inner-logo
                    a(href="/")
                        img(src="/images/logo.png", alt="logo")
            .col-md-6
                .inner-menu 
                    ul.menu
                        li 
                            a(href="/") HOME 
                        li.sub-menu
                            -const pathProduct = "/products"
                            a(href=pathProduct) PRODUCT 
                            +sub-menu(productCategory, pathProduct)
            .col-md-4
                .search-container
                    form.form-inline(action=`search` method="get")
                        .input-group
                            input.form-control(style="width= 200px" type="text" placeholder="Search" name="keyword" value= keyword)
                            lable.form-table(for="")
                            button.btn.btn-outline-secondary(type="submit") 
                                i.fas.fa-search
        if(cart.totalProduct)
            a(href="/cart")
                i.fas.fa-shopping-cart.fa-2x
                span  (#{cart.totalProduct})
        else
            a(href="/cart")
                i.fas.fa-shopping-cart.fa-2x
                span (0)