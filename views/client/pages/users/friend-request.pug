extends ../../layouts/default.pug
include ../../mixins/alert.pug

block content
  .container.mt-5
    .row.mb-4
      .col-12
        h4 90 lời mời kết bạn
        a.btn.btn-outline-primary(href='#') Xem lời mời đã gửi
    .row
      each user in users
        .col-12.col-md-6.col-lg-3.mb-4
          .card.shadow-sm
            .card-body
              .d-flex.align-items-center.mb-3
                img.rounded-circle(src=user.avatar alt="Profile picture" style="width: 50px; height: 50px;")
                .ml-3
                  h5.mb-0= user.fullName
                  p.text-muted.mb-0 2 tuần
              .d-flex.justify-content-around.mt-3
                button.btn.btn-success.accept-btn Accept 
                button.btn.btn-danger.decline-btn Delete 

block script 
  script(src="/js/users.js")