mixin alert-success(time)
    - if (messages.success)
        div(class= "alert-message alert-success"
            data-time=time
            alert-message 
        ) #{messages.success} 
            button(class= "close-alert" close-alert) x 

mixin alert-error(time)
    - if (messages.error)
        div(class= "alert-message alert-danger" 
            data-time=time
            alert-message
        ) #{messages.error} 
            button(class= "close-alert" close-alert) x 